    <script>
        // Mobile menu toggle functionality
        const mobileBtn = document.getElementById('nav-mobile-btn');
        const mobileNav = document.getElementById('mobile-nav');
        const closeBtn = document.getElementById('close-mobile-nav');

        // Menüyü açma/kapatma
